///////////////////////////////////////////////////////////////////////////////////////-->
 <!--//////////////////////////////////////////////////////////////////////////////////////
////////////////////                   BOTÃO 1                     ////////////////////////
////////////////////////////////////////////////////////////////////////////////////////-->
{% macro button1(pId="", pText="",pAwesome="", pEvent="") %}
    <div class="col-xs-6">
        <button type="button" class="btn btn-block btn-primary" {{ pEvent }}> {{ pText }}
            <span class="glyphicon glyphicon-{{pAwesome}}"></span>
        </button>
    </div>
{% endmacro %}
